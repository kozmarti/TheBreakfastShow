<div class="simple-police d-flex justify-content-between">
<form method="post" action="{{ path('user_photo_delete', {'id': user_photo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_photo.id) }}">
    <button class="simple-police ml-5 btn-danger rounded p-2 m-1 text-decoration-none">Delete</button>
</form>
</div>
