{% extends 'base.html.twig' %}
{% block body %}
    {% include 'home/component/_nav.html.twig' %}
    {% include 'home/content/recipes.html.twig' %}
<div class="about-me-bg"></div>
    <div class="about-me-bg"></div>
    <div class="about-me-bg"></div>


    <h1 class="handwriting">Season {{ season.number }}. :  {{ season.title  }}</h1>
    <div class="wide-container-wrapper">
        <div class="wide-container">
    {% for episode in episodes %}

        <div class="d-flex justify-content-between">
            <div class="d-flex flex-column justify-content-around">
            <div><a href="{{ path('episode_show', {'id': episode.id}) }}"> <i class="fas fa-play"></i> Episode {{episode.number }}. :
                    <i class="fas fa-quote-left"></i> {{episode.title }}  <i class="fas fa-quote-right"></i> </a>
            </div>
        <div>{{episode.recipename }}</div>

            </div>
            <img class="small-image" src="/uploads/{{ episode.images.ownerphoto }}" alt="Image {{ episode.recipename }}">
        </div>
            {% endfor %}
        </div>
</div>
    <hr>
    <a href="{{ path('recipes_home') }}">Back to seasons</a>
